<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
  
     <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/attend_meeting_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-2dp"
        android:divider="#00000000" 
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000" 
        android:scrollbars="none"
        android:layout_below="@+id/attend_meeiting_divider"/>
    <View
        android:id="@+id/attend_meeiting_divider"
	android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@+id/attend_meeting_top_bar_layout"
    android:background="#8a8a8a" />  
    <!-- bar -->
    <RelativeLayout
        android:id="@+id/attend_meeting_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/navigationbar_background">

        <Button
            android:id="@+id/attend_meeting_top_bar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/myppt_top_bar_btn_selector" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:shadowColor="@android:color/black"
            android:textColor="@color/theme_blue"
            android:shadowDx="1"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="观看会议"
            android:textAppearance="?android:attr/textAppearanceMedium" />
         <!-- <View
            android:layout_width="2dp"
            android:layout_height="42.5dp"
            android:layout_toRightOf="@+id/attend_meeting_top_bar_btn"
            android:background="#8a8a8a" /> -->
            <Button
            android:id="@+id/attending_meeting_join_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/navigationbar_attend_selector" />
    </RelativeLayout>
 
    
   

</RelativeLayout>
