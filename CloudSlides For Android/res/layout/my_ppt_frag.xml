<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_bg" >

      
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/myppt_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"        
        android:dividerHeight="20dp"
        android:divider="#00000000"
        android:scrollbars="none"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"        
        android:layout_below="@+id/my_ppt_divider" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <View
         android:id="@+id/my_ppt_divider"
	android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@+id/myppt_top_bar_layout"
    android:background="#8a8a8a" />
    <RelativeLayout
        android:id="@+id/myppt_top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/navigationbar_background">

        <Button
            android:id="@+id/myppt_top_bar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/myppt_top_bar_btn_selector" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myppt_top_bar_btn"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:shadowColor="@android:color/black"
            android:textColor="@color/theme_blue"
            android:shadowDx="1"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="我的PPT"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- <View
            android:layout_width="2dp"
            android:layout_height="42.5dp"
            android:layout_toRightOf="@+id/myppt_top_bar_btn"
            android:background="@drawable/divider" /> -->

        <Button
             android:id="@+id/myppt_upload_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            
            android:background="@drawable/upload_icon_selector"/>

    </RelativeLayout>
    
    


</RelativeLayout>
